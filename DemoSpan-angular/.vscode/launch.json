{
    "version": "0.2.0",
    "configurations": [
      {
        "type": "chrome",
        "request": "launch",
        "name": "Launch Chrome against localhost",
        "url": "http://localhost:4200",
        "webRoot": "${workspaceFolder}/src/app",
        "sourceMaps": true,
  
        //--SOMETIMES THIS IS NEEDED--
        "sourceMapPathOverrides": {
          "webpack:///./*": "${workspaceRoot}/*"
        }
      }
    ]
  }
  